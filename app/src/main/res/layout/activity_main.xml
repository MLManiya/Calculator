<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:enabled="false"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:layout_margin="10dp"
       android:layout_weight="1"
       >

       <Button
           android:id="@+id/Ac"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:theme="@style/Theme.Calculator"
           android:text="AC"
           android:background="@drawable/cornerbutton"
           android:textColor="@color/black"
           android:textSize="20dp"
           android:gravity="center"
           android:textStyle="bold"
           android:layout_weight="1"

           />

       <Button
           android:id="@+id/Back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="BACK"
           android:background="@drawable/cornerbutton"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="20dp"
           android:layout_weight="1"
           />

       <Button
           android:id="@+id/Div"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="/"
           android:background="@drawable/cornerbutton"
           android:textColor="@color/black"
           android:textSize="20dp"
           android:textStyle="bold"
           android:layout_weight="1"
          />

       <Button
           android:id="@+id/Mul"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="*"
           android:background="@drawable/cornerbutton"
           android:textColor="@color/black"
           android:textSize="20dp"
           android:textStyle="bold"
           android:layout_weight="1"
            />



   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/Seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20dp"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/Eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/Nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="9"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:background="@drawable/cornerbutton"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/Four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/Five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/Six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="6"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/Plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+"
            android:background="@drawable/cornerbutton"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/Two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/Three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/Equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="="
            android:background="@drawable/cornerbutton"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/Doublezero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/Dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="."
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            />

<!--        <Button-->
<!--            android:id="@+id/Equl"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:text="="-->
<!--            android:textSize="20dp"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_weight="1"-->
<!--            />-->
    </LinearLayout>


</LinearLayout>